package com.abhishek.test1;

import java.sql.Time;
import java.util.Map;
import com.google.appengine.api.datastore.Entity;

class User {
	static long user_id = 1; // primary key
	String email;
	String login;
	String passwd;
	String first_name;
	String last_name;
	String middle_name;
	char gender;
	Time upd_ts;
	String photo_path;
	boolean is_external;
	Time last_login;
	short failed_logins;
	boolean verified;

	/*
	 * @param m : set of all properties of the user, (all the columns in the
	 * MySQL script).
	 */
	Entity create_user_entity(Map<String, String> m) {
		Entity new_entity = new Entity("User", ("" + user_id));
		user_id++;
		DAL.setProperty(new_entity, m);
		return new_entity;
	}

}

class Content {
	static long content_id; // primary key
	String content_type;
	String url;
	String title;
	String user_id;
	String is_private;
	String description;
	String upd_ts;
	String tags;

	Entity create_content_entity(Map<String, String> m) {
		Entity new_entity = new Entity("content", ("" + content_id));
		content_id++;
		DAL.setProperty(new_entity, m);
		return new_entity;
	}

}

class Trails {
	static long trail_id = 1; // primary key
	String title;
	String is_private;
	String user_id;
	String upd_ts;
	String tags;

	Entity create_content_entity(Map<String, String> m) {
		Entity new_entity = new Entity("trail", ("" + trail_id));
		trail_id++;
		DAL.setProperty(new_entity, m);
		return new_entity;
	}
}

